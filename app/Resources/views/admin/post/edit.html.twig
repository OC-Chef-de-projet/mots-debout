{% extends 'base.html.twig' %}
{% form_theme form _self %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <div class="alert alert-danger">
                {% for error in errors %}
                    {{ error.message }}<br/>
                {% endfor %}
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}


{% block body %}
<main id="admin">
    <div class="col container">
        <div class="card">
            <div class="card-image">
                <h4 class="hdeader">Modification d'un article
            </div>
            <div class="card-stacked">
                <div class="card-content">
                    {{ form_errors(form) }}
                    {{ form_start(form,{'attr': {'class': 'form-horizontal'} }) }}

                    <div class="form-group">
                        <div class="col-sm-2">
                            {{ form_widget(form.category) }}
                        </div>

                        <div class="col-sm-8">

                        </div>
                        <div class="col-sm-2">
                            {{ form_widget(form.status) }}
                        </div>
                    </div>

                    {# Nom #}
                    {{ form_errors(form.title ) }}
                    <div class="form-group">
                        <div class="col-sm-12">
                            <label for="title">{{ form_label(form.title) }}</label>
                            {{ form_widget(form.title) }}
                        </div>
                    </div>

                    {# Email #}
                    {{ form_errors(form.content) }}
                    <div class="form-group">
                        <div class="col-sm-12">
                            <label for="content">{{ form_label(form.content) }}</label>
                            {{ form_widget(form.content) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s6">
                            <button type="submit">Enregistrer</button>
                            {{ form_end(form) }}
                        </div>
                        {% if constant('AppBundle\\Entity\\Post::DRAFT') == post.status or  constant('AppBundle\\Entity\\Post::REFUSED') == post.status %}
                        <div class="input-field col s6">
                                {{ form_start(delete_form) }}
                                <button type="submit" class="right">Supprimer</button>
                                {{ form_end(delete_form) }}
                        </div>
                        {% endif %}
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}

{% block javascripts %}
    {{ tinymce_init() }}
{% endblock %}
