{% extends 'base.html.twig' %}

{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            <div class="alert alert-danger">
                {% for error in errors %}
                    {{ error.message }}<br/>
                {% endfor %}
            </div>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

{% block body %}
    <main id="admin">
        <div class="col container">
            <div class="card">
                <div class="card-image">
                    <h4 class="hdeader">Modification d'un compte utilisateur
                </div>
                <div class="card-stacked">
                    <div class="card-content">
                        {{ form_errors(edit_form) }}
                        {{ form_start(edit_form,{'attr': {'class': 'form-horizontal'} }) }}
                        <div class="row">


                            {# Nom #}
                            {{ form_errors(edit_form.name ) }}
                            <div class="input-field col s12">
                                {{ form_widget(edit_form.name) }}
                                <label class="active" >{{ form_label(edit_form.name) }}</label>
                            </div>

                            {# Email #}
                            {{ form_errors(edit_form.email) }}
                            <div class="input-field col s12">
                                {{ form_widget(edit_form.email) }}
                                <label class="active" style="width:100%">{{ form_label(edit_form.email) }}</label>
                            </div>


                            {# Roles #}
                            <div class="input-field col s12">
                                {{ form_widget(edit_form.roles) }}
                                <p></p>
                                <label class="active" for="roles">{{ form_label(edit_form.roles) }}</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                {{ form_end(edit_form) }}
                            </div>
                            <div class="input-field col s6">
                                {{ form_start(delete_form) }}
                                    <button type="submit">Supprimer</button>
                                {{ form_end(delete_form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

