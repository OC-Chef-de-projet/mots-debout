{% extends 'base.html.twig' %}


{% block body %}
    <main id="home">
        <div class="row">
            <div class="col s12 m6 push-m3">
                <div class="card blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">Laissez-nous un message</span>
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="input-field col s12">
                                {{ form_widget(form.name) }}
                                <label class="active" for="first_name2">{{ form_label(form.name) }}</label>
                            </div>
                            <div class="input-field col s12">
                                {{ form_widget(form.email) }}
                                <label class="active" for="first_name2">{{ form_label(form.email) }}</label>
                            </div>
                            <div class="input-field col s12">
                                {{ form_widget(form.message) }}
                                <label for="textarea1" class='active'>{{ form_label(form.message) }}</label>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}

