{% extends 'base.html.twig' %}

{% block body %}
    <main id="home">
        <div class="containers">
            {% include '::post.html.twig' %}
            <div class="container center-align">
                <ul class="pagination">
                    <li {{ current <= 0 ? 'class="disabled"': 'class="waves-effect"' }}>
                        <a href="{{ path('homepage', {offset: current-1 < 0 ? 0 : current-1}) }}">
                            <i class="material-icons">chevron_left</i>
                        </a>
                    </li>
                    {% for i in 0..maxPages %}
                        <li class="waves-effect {{ current == i ? 'active' }}{{ i > maxPages ? 'disabled' }}">
                            <a href="{{ path('homepage', {offset:i}) }}">{{ i+1 }}</a>
                        </li>
                    {% endfor %}
                    <li {{ current == maxPages ? 'class="disabled"': 'class="waves-effect"' }}>
                        <a href="{{ path('homepage', {offset: current+1 <= maxPages ? current+1 : current}) }}">
                            <i class="material-icons">chevron_right</i>
                        </a>
                    </li>
                </ul>
            </div>

        </div>
    </main>
{% endblock %}

