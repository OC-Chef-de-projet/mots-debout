{% extends 'base.html.twig' %}

{% block body %}

    <section class="bg-primary page-section" id="ateliers">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 mx-auto text-center ">
                    <h1 class="section-heading text-white">Ateliers découvertes des disciplines de l'art vivant</h1>
                    <h2 class="text-white mb-4">
                        Conduits par des artistes professionnels
                    </h2>
                    <h3 class="text-white mb-4">
                        Les ateliers mensuels d’octobre à mai ouvrent aux multi disciplines : <br>
                        Clown, Mime, Théâtre d’Ombres, Corps, Marionnette, Chant, Masque, Musique, Souffle, Conte…
                    </h3>
                </div>
            </div>
        </div>
    </section>


    <section class="bg-primary">
        <div class="container">
            <h2 class="mb-4 text-white">Prochains Ateliers</h2>
            <div class="training text-left">
            <a href="#" class="button">Renseignements et inscription</a>
            </div>
            <div id="myCarousel" class="carousel slide" data-ride="carousel">

                <!-- Carousel indicators -->
                <ol class="carousel-indicators">
                    {% for i in 0..trainings|length - 1 %}
                        <li data-target="#myCarousel" data-slide-to="{{ i }}" {% if loop.first %}class="active"{% endif %}></li>
                    {% endfor %}
                </ol>

                <!-- Content -->
                <div class="carousel-inner">
                    {% for training in trainings %}
                        <div class="item carousel-item {% if loop.first %}active{% endif %}">
                            <div class="img-box"><img src="{{ asset('assets/img/training/' ~ training.imageLink) }}" alt=""></div>
                            <h2 class="text-white">{{ training.title }}</h2>
                            <h3>{{ training.startAt |date("F jS \\a\\t g:ia") }}</h3>
                            <p class="testimonial">{{ training.content }}</p>
                        </div>

                    {% endfor %}

                </div>

                <!-- Carousel controls -->
                <a class="carousel-control left carousel-control-prev" href="#myCarousel" data-slide="prev">
                    <i class="fa fa-angle-left"></i>
                </a>
                <a class="carousel-control right carousel-control-next" href="#myCarousel" data-slide="next">
                    <i class="fa fa-angle-right"></i>
                </a>
            </div>
        </div>
    </section>


    <section class="text-white">
        <div class="container ">
            <h2 class="mb-4 txt-red">L’Art en doute</h2>
            <h3 class="text-faded-red mb-4">Le théâtre est un espace multiple qui ne se laisse pas saisir d’un seul regard
                et encore moins par des certitudes.
            </h3>
            <h3 class="text-faded-red mb-4">Les Ateliers sont le lieu où l’humilité s’exerce au travers des prismes
                d'artistes divers, différents et complémentaires.
            </h3>
        </div>
    </section>

