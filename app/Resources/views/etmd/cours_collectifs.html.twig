                    </div>
                    <div class="item carousel-item">
                        <div class="_img-box-full"><img
                                    src="{{ asset('assets/img/cours_collectifs/cours_collectifs_04.png') }}" alt="">
                        </div>
                    </div>
                    <div class="item carousel-item">
                        <div class="_img-box-full"><img
                                    src="{{ asset('assets/img/cours_collectifs/cours_collectifs_05.png') }}" alt="">
                        </div>
                    </div>
                    <div class="item carousel-item">
                        <div class="_img-box-full"><img
                                    src="{{ asset('assets/img/cours_collectifs/cours_collectifs_06.png') }}" alt="">
                        </div>
                    </div>
                    <div class="item carousel-item">
                        <div class="_img-box-full"><img
                                    src="{{ asset('assets/img/cours_collectifs/cours_collectifs_07.png') }}" alt="">
                        </div>
                    </div>

                </div>
                <!-- Carousel controls -->
                <a class="carousel-control left carousel-control-prev background-red" href="#myCarousel2"
                   data-slide="prev">
                    <i class="fa fa-angle-left"></i>
                </a>
                <a class="carousel-control right carousel-control-next background-red" href="#myCarousel2"
                   data-slide="next">
                    <i class="fa fa-angle-right"></i>
                </a>
