{% extends "base.html.twig" %}



{% trans_default_domain "login" %}
{% block body %}

<main id="login" style="padding-top:10px">;

    <div class="row">
        <div class="col s12 m6 push-m3">
            <div class="card">
                <div class="card-content white-text">
                    <span class="card-title">Connexion</span>
                    {{ form_start(form_login) }}
                    <div class="row">
                        <div class="input-field col s12">
                            {{ form_widget(form_login._email) }}
                            <label class="active" for="first_name2">{{ form_label(form_login._email) }}</label>
                        </div>
                        <div class="input-field col s12">
                            {{ form_widget(form_login._password) }}
                            <label class="active" for="first_name2">{{ form_label(form_login._password) }}</label>
                        </div>
                        <div class="remember-forgot input-field col s12">
                            <div class="row">
                                <div class="col-md-10">
                                    <div class="checkbox">
                                        <label>{{ form_widget(form_login._remember_me) }}</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    {{ form_end(form_login) }}
                </div>
            </div>
        </div>
    </div>

</main>
{% endblock %}


