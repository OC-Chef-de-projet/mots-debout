{% extends "base.html.twig" %}
{% block body %}
<form action="{{ path('security_login_check') }}" method="POST">
	{% if error %}
	<div class="alert alert-danger">
		{{ error.messageKey|trans(error.messageData) }}
	</div>
	{% endif %}

        <label for="Email">{% trans %}Email{% endtrans %}</label>
        <input type="text" name="email" class="form-control" placeholder="{% trans %}Email{% endtrans %}">
        <label for="password">{% trans %}Password{% endtrans %}</label>
        <input type="password" name="password" class="form-control" placeholder="{% trans %}Password{% endtrans %}">
        <button type="submit" class="btn btn-default">{% trans %}Enter{% endtrans %}</button>
</form>
{% endblock %}
